{
  "name": "format-codeowners",
  "version": "1.0.0",
  "description": "A GitHub Action to properly format CODEOWNERS.",
  "main": "dist/index.js",
  "scripts": {
    "compile": "tsc",
    "preaction": "tsc",
    "action": "env $(cat development/.env.development) node dist/index.js",
    "format": "prettier --write **/*.ts",
    "format-check": "yarn run format:check",
    "format:check": "prettier --check **/*.ts",
    "lint": "eslint **/*.ts",
    "lint:fix": "eslint **/*.ts --fix",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "package": "ncc build --source-map --license licenses.txt",
    "preci:package": "tsc",
    "ci:package": "yarn package"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:Archetypically/format-codeowners.git"
  },
  "keywords": [
    "github",
    "actions",
    "codeowners"
  ],
  "author": "Evan Lee <@Archetypically>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Archetypically/format-codeowners/issues"
  },
  "homepage": "https://github.com/Archetypically/format-codeowners#readme",
  "jest": {
    "preset": "ts-jest",
    "clearMocks": true,
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.ts"
    ],
    "verbose": true
  },
  "eslintConfig": {
    "extends": "eslint:recommended"
  },
  "prettier": {
    "printWidth": 100
  },
  "devDependencies": {
    "@jest/globals": "^29.0.1",
    "@types/jest": "^29.0.0",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "8.5.0",
    "jest": "^29.0.1",
    "prettier": "2.7.1",
    "ts-jest": "^28.0.8"
  },
  "dependencies": {
    "@actions/core": "^1.9.1",
    "typescript": "^4.8.2"
  }
}
